<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape  android:shape="rectangle">
            <stroke android:width="1px" android:color="#f00"/>
            <solid android:color="#2f00" />
        </shape>
    </item>

    <item android:gravity="center" android:width="80dp" >
        <shape  android:shape="rectangle">
            <stroke android:width="1px" android:color="#f00"/>
        </shape>
    </item>

    <item android:gravity="center" android:height="80dp" >
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="#f00"/>
        </shape>
    </item>

    <item android:gravity="center_horizontal|bottom" android:height="80dp" >
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="#f00"/>
        </shape>
    </item>
</layer-list>
